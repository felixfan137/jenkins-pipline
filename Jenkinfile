pipeline {
         agent any
         stages {
                 stage('One') {
                 steps {
                     echo 'Hi, this is Zulaikha from edureka'
                 }
                 }
                 stage('Two') {
                          steps {
                             echo 'Hi, two'
                          }
                 }
                 stage('Three') {
                          when {
                                not {
                                     branch "master"
                                }
                          }
                          steps {
                                echo "Hello"
                          }
                 }
                 stage('Four') {
                 parallel { 
                            stage('Unit Test') {
                           steps {
                                echo "Running the unit test..."
                           }
                           }
                            stage('Integration test') {
                              agent  {
                                    any {
                                            image 'node:7-alpine'
                                              args '--name docker-node' // list any args
                                           }
                                    }
                              steps {
                                echo "Running the integration test..."
                              }
                           }
                           }
                           }
              }
}
